{
  "name": "filmo",
  "description": "Simple kodi nfo visualiser",
  "version": "0.0.1",
  "author": "Radiium",
  "homepage": "https://github.com/radiium/filmo",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve --port 4200",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build:prod": "ng build --production",
    "build:electron": "tsc -p src-electron/ && npx copyfiles --flat package.json src-electron/postcss.config.js dist/",
    "build:all": "npm run build:prod && npm run build:electron",
    "start": "npm-run-all -p serve electron:reload",
    "start:web": "npm run serve -- -o",
    "start:prod": "npm run build:prod && npm run build:electron && electron dist/",
    "electron:reload": "npm run build:electron && wait-on http-get://localhost:4200/ && electron dist/ --dev",
    "release:all": "npm run release -- -lmw",
    "release": "npm run build:all && electron-builder build --config electron-builder.yml"
  },
  "private": true,
  "dependencies": {
    "@electron/remote": "^1.1.0",
    "fast-xml-parser": "^3.19.0",
    "fuse.js": "^6.4.6",
    "glob": "^7.1.7",
    "parse-torrent-name": "^0.5.4",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.0.1",
    "@angular/animations": "^12.0.1",
    "@angular/cli": "^12.0.1",
    "@angular/common": "^12.0.1",
    "@angular/compiler": "^12.0.1",
    "@angular/compiler-cli": "^12.0.1",
    "@angular/core": "^12.0.1",
    "@angular/forms": "^12.0.1",
    "@angular/language-service": "^12.0.1",
    "@angular/platform-browser": "^12.0.1",
    "@angular/platform-browser-dynamic": "^12.0.1",
    "@angular/router": "^12.0.1",
    "@capacitor/cli": "^2.4.7",
    "@capacitor/core": "^2.4.7",
    "@datorama/akita": "^6.1.3",
    "@datorama/akita-ngdevtools": "^6.0.0",
    "@ionic-native/core": "^5.33.0",
    "@ionic-native/splash-screen": "^5.33.0",
    "@ionic-native/status-bar": "^5.33.0",
    "@ionic/angular": "^5.6.7",
    "@ionic/angular-toolkit": "^3.1.1",
    "@types/jasmine": "^3.7.4",
    "@types/jasminewd2": "^2.0.9",
    "@types/node": "^15.6.0",
    "codelyzer": "^6.0.2",
    "copyfiles": "^2.4.1",
    "electron": "^12.0.9",
    "electron-builder": "^22.11.5",
    "electron-context-menu": "^3.1.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-reload": "^1.5.0",
    "jasmine-core": "^3.7.1",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~3.3.0",
    "karma-jasmine-html-reporter": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "primeicons": "^4.1.0",
    "protractor": "~7.0.0",
    "rxjs": "~6.5.5",
    "ts-node": "^9.1.1",
    "tslint": "~6.1.0",
    "typescript": "~4.2.4",
    "uuid": "^8.3.2",
    "wait-on": "^5.3.0",
    "zone.js": "~0.11.4"
  }
}
